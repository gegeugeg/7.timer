<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/groupLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66A3D2"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/backImage"
        android:layout_width="350dp"
        android:layout_height="430dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_background">
    </ImageView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Разработчики:"
        android:textSize="32sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="monospace"/>

    <ImageView
        android:id="@+id/danyaImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="80dp"
        android:layout_below="@id/textView"
        android:background="@drawable/danya">
    </ImageView>

    <TextView
        android:id="@+id/textDanya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Даня Лапшин"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginStart="180dp"
        android:layout_below="@id/textView"
        android:layout_marginTop="55dp"
        android:fontFamily="monospace"/>

    <ImageView
        android:id="@+id/romaImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="250dp"
        android:layout_below="@id/danyaImage"
        android:background="@drawable/roma">
    </ImageView>

    <TextView
        android:id="@+id/textRoma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рома Андреев"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@id/textDanya"
        android:layout_marginStart="80dp"
        android:layout_marginTop="90dp"
        android:fontFamily="monospace"/>

    <ImageView
        android:id="@+id/zhenyaImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="80dp"
        android:layout_below="@id/romaImage"
        android:background="@drawable/zhenya">
    </ImageView>

    <TextView
        android:id="@+id/textZhenya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Женя Хорьков"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@id/textRoma"
        android:layout_marginStart="180dp"
        android:layout_marginTop="85dp"
        android:fontFamily="monospace"/>


    <ImageView
        android:id="@+id/moreBackImage"
        android:layout_below="@id/backImage"
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_background">
    </ImageView>

    <Button
        android:id="@+id/backButton"
        android:layout_below="@id/backImage"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:text="  Назад  "
        android:textSize="18dp"
        android:background="@drawable/round_button">
    </Button>

</RelativeLayout>